{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacksConfig": {
    "phases": {
      "install": {
        "cmds": [
          "npm install --legacy-peer-deps --omit=dev"
        ]
      }
    }
  }
}